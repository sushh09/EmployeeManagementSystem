@model EmployeeManagementSystem.Models.Employee

@{
    ViewBag.Title = "Delete Employee";
}

<h2>Delete Employee</h2>

<h3>Are you sure you want to delete this employee?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Employee Code</dt>
        <dd>@Model.EmployeeCode</dd>

        <dt>Name</dt>
        <dd>@Model.EmployeeName</dd>

        <dt>Email</dt>
        <dd>@Model.EmailId</dd>

        <dt>Phone Number</dt>
        <dd>@Model.PhoneNumber</dd>

        <dt>Gender</dt>
        <dd>@Model.Gender</dd>
    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Employee", new { id = Model.EmployeeCode }))
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "EmployeeDetails", null, new { @class = "btn btn-default" })
    }
</div>